<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topLeft_option"
            android:background="?actionBarItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:clickable="true"
            android:contextClickable="true"
            android:fontFamily="@font/semibold"
            android:text="Cancel"
            android:visibility="gone"
            android:textSize="14sp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/topRight_option"
            android:background="?actionBarItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/semibold"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:contextClickable="true"
            android:text="Set Timer"
            android:textSize="14sp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:textColor="@color/white" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <ImageView
            android:background="?actionBarItemBackground"
            android:id="@+id/up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_up"
            android:visibility="invisible"
            android:tint="@color/white" />

        <LinearLayout
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/timerHr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="65sp"
                android:textColor="@color/white"
                android:text="0"
                android:visibility="gone"
                android:textAlignment="viewEnd"/>
            <TextView
                android:id="@+id/timerColonM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="65sp"
                android:textColor="@color/white"
                android:text=":"
                android:visibility="gone"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/timerMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="65sp" />
            <TextView
                android:id="@+id/timerColonS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="65sp"
                android:text=":"
                android:textColor="@color/white"
                android:textAlignment="viewEnd"/>

            <TextView
                android:id="@+id/timerSec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="65sp"
                android:text="00"
                android:textColor="@color/white"
                android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="130dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@+id/textView1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_weight="7"
                android:background="@color/white" />

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@+id/textView1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_weight="3"
                android:background="@color/unFocused" />

        </LinearLayout>

        <ImageView
            android:background="?actionBarItemBackground"
            android:id="@+id/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_down"
            android:visibility="invisible"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/incrementBy1min"
            android:clickable="true"
            android:focusable="true"
            android:background="?actionBarItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:text="+ 1:00"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/topic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:text="null"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="144dp"
        android:layout_above="@id/bottomSheet"
        android:background="@drawable/shadow_top"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/curved_layout"
        android:outlineProvider="bounds"
        android:backgroundTint="@color/white"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="false"
        app:behavior_peekHeight="170dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:animateLayoutChanges="true"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:id="@+id/topbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_back"
                        android:tint="@color/unFocused_dark"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="10dp"
                        android:background="?actionBarItemBackground"
                        android:clickable="true"
                        android:layout_gravity="top|left"/>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <LinearLayout
                    android:id="@+id/time_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tot_hr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="28sp"
                        android:fontFamily="@font/semibold"
                        android:visibility="gone"
                        android:text="1"/>
                    <TextView
                        android:id="@+id/tot_hr_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="18sp"
                        android:visibility="gone"
                        android:fontFamily="@font/semibold"
                        android:text="hr "/>
                    <TextView
                        android:id="@+id/tot_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="28sp"
                        android:fontFamily="@font/semibold"
                        android:text="0"/>
                    <TextView
                        android:id="@+id/tot_min_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="18sp"
                        android:fontFamily="@font/semibold"
                        android:text="m"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/unFocused_dark"
                    android:fontFamily="@font/semibold"/>
            </LinearLayout>

            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/barGraph">

            </com.github.mikephil.charting.charts.BarChart>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:background="?actionBarItemBackground"
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:padding="20dp"
            android:src="@drawable/ic_menu"
            android:tint="@color/unFocused_dark" />

        <ImageView
            android:background="?actionBarItemBackground"
            android:id="@+id/more_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:padding="20dp"
            android:src="@drawable/ic_more"
            android:tint="@color/unFocused_dark" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>