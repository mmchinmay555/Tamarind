<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".TimeSetter">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_btn_timeSetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?actionBarItemBackground"
            android:src="@drawable/ic_back"
            android:layout_gravity="left"
            android:padding="10dp"
            android:tint="@color/white"/>

        <TextView
            android:id="@+id/setTime_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?actionBarItemBackground"
            android:layout_gravity="right"
            android:clickable="true"
            android:contextClickable="true"
            android:fontFamily="@font/semibold"
            android:text="Set"
            android:textSize="14sp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:textColor="@color/white"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hour_ones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="70sp"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="h "
            android:textSize="35sp"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/minute_tenth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="70sp"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/minute_ones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="70sp"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"
            android:textSize="35sp"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:fabCustomSize="60dp"
            android:backgroundTint="@color/white"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="-40dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:tint="@color/colorPrimary"
            android:layout_gravity="right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:layout_above="@id/bottomSheet"
            android:background="@drawable/shadow_top_rectangular"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            android:background="@color/white"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:paddingTop="25dp"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingHorizontal="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="9"
                    android:elevation="25dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/one"
                        android:background="?actionBarItemBackground"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:padding="15dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/regular"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:onClick="On_num_Clicked"
                        android:tag="1"
                        android:textSize="45sp"/>

                    <TextView
                        android:id="@+id/two"
                        android:background="?actionBarItemBackground"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:padding="15dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/regular"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:onClick="On_num_Clicked"
                        android:tag="2"
                        android:textSize="45sp"/>

                    <TextView
                        android:id="@+id/three"
                        android:background="?actionBarItemBackground"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:padding="15dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/regular"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:onClick="On_num_Clicked"
                        android:tag="3"
                        android:textSize="45sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="9"
                    android:elevation="25dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/four"
                        android:background="?actionBarItemBackground"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:padding="15dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/regular"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:onClick="On_num_Clicked"
                        android:tag="4"
                        android:textSize="45sp"/>

                    <TextView
                        android:id="@+id/five"
                        android:background="?actionBarItemBackground"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:padding="15dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/regular"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:onClick="On_num_Clicked"
                        android:tag="5"
                        android:textSize="45sp"/>

                    <TextView
                        android:id="@+id/six"
                        android:background="?actionBarItemBackground"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:padding="15dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/regular"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:onClick="On_num_Clicked"
                        android:tag="6"
                        android:textSize="45sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="9"
                    android:elevation="25dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/seven"
                        android:background="?actionBarItemBackground"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:padding="15dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/regular"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:onClick="On_num_Clicked"
                        android:tag="7"
                        android:textSize="45sp"/>

                    <TextView
                        android:id="@+id/eight"
                        android:background="?actionBarItemBackground"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:padding="15dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/regular"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:onClick="On_num_Clicked"
                        android:tag="8"
                        android:textSize="45sp"/>

                    <TextView
                        android:id="@+id/nine"
                        android:background="?actionBarItemBackground"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:padding="15dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/regular"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:onClick="On_num_Clicked"
                        android:tag="9"
                        android:textSize="45sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="9"
                    android:elevation="25dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:background="?actionBarItemBackground"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:visibility="invisible"
                        android:padding="15dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/regular"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:textSize="45sp"/>

                    <TextView
                        android:id="@+id/zero"
                        android:background="?actionBarItemBackground"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:padding="15dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/regular"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:onClick="On_num_Clicked"
                        android:tag="0"
                        android:textSize="45sp"/>

                    <TextView
                        android:background="?actionBarItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:visibility="invisible"
                        android:padding="15dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/regular"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:textSize="45sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>